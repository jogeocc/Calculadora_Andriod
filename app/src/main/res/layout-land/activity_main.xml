<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    tools:context="com.example.jgchan.ej02_calculadora.MainActivity">

    <EditText
        android:id="@+id/edtDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_green_light"
        android:ems="10"
        android:inputType="numberDecimal"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnC"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@android:color/holo_red_dark"
            android:onClick="borrar"
            android:text="C"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnCE"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_row="0"
            android:background="@android:color/holo_blue_dark"
            android:onClick="borrarUltimo"
            android:padding="4dp"
            android:text="CE"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnM"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_row="0"
            android:background="@android:color/holo_blue_dark"
            android:onClick="guardarEnMemoria"
            android:text="M"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnMRC"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_row="0"
            android:background="@android:color/holo_blue_dark"
            android:onClick="desplegarMemoria"
            android:text="MRC"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="manejadorBotones"
            android:text="7" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="manejadorBotones"
            android:text="4" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="manejadorBotones"
            android:text="1" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="4"
            android:onClick="manejadorBotones"
            android:text="0" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="manejadorBotones"
            android:text="8" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="manejadorBotones"
            android:text="5" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="manejadorBotones"
            android:text="2" />

        <Button
            android:id="@+id/btnPT"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="4"
            android:onClick="manejadorBotones"
            android:text="." />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="3"
            android:layout_row="1"
            android:onClick="manejadorBotones"
            android:text="/" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="manejadorBotones"
            android:text="9" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="manejadorBotones"
            android:text="6" />

        <Button
            android:id="@+id/btnPor"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="manejadorBotones"
            android:text="*" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_row="3"
            android:onClick="manejadorBotones"
            android:text="3" />

        <Button
            android:id="@+id/btnRes"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="manejadorBotones"
            android:text="-" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_row="4"
            android:onClick="manejadorBotones"
            android:text="=" />

        <Button
            android:id="@+id/btnSuma"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_column="3"
            android:layout_row="4"
            android:onClick="manejadorBotones"
            android:text="+"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="115dp" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
